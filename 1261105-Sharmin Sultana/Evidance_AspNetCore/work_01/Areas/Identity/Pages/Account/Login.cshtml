@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2 class="alert alert-info display-4">Welcome to Login Page...</h2>
<div class="row">
    <div class="col">
        <div class="float-left">
            <img src="~/Images/login2.jpg" height="380" width="650" />
        </div>
        <div class="float-right">
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success w-25">Sign In</button>
                    <p class="mt-2">
                        Not yet a registered user?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Please first Register here!!</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
